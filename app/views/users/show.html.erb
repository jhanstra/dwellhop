<div class="left-container">
	<div class="photo-container">
		<%= image_tag("jared-hammock.jpg", :alt => "photo", class:"user-photo") %>
	<% provide(:title, @user.name) %>
	<h1><%= @user.name %></h1>
	<h3><%= @user.email %></h3>
	<div class='centered'>
		<%= link_to("Update Profile", edit_user_path(current_user), class:"button medium my-button radius") %>
	</div>
	</div>
</div>
<div class="right-container">
	<% flash.each do |key, value| %>
        <div class="alert-div alert-<%= key %>"><%= value %></div>
    <% end %>
	<% if @user.homes.any? %>
      <h3>My Properties (<%= @user.homes.count %>)</h3>
      <ul class="homes">
      	<%= render @homes %>
      </ul>
    <% end %>
</div>