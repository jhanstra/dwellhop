<div class="home-div">
  <div class="home-image-div">
    <%= image_tag("miguels.jpg", :alt => "photo", class:"home-image") %>
  </div>
  <div class="home-info-div">
  	<div class="home-add"><h2 class="home-address"><%= home.address %></h2>
      <div class="home-buttons"><%= link_to "Delete", home, method: :delete, data: { confirm: "Are you sure you want to delete this listing?" }, title: home.address, class:'button tiny radius alert' %><%= link_to "Update Home", edit_home_path(home.id), class:'button tiny radius' %><%= link_to "Show Home", home, class:'button tiny radius' %>
      </div>
    </div>
    <div class="home-specs">
      <p class="home-description"><%= home.description %></p>
      <p>List Price: $<%= home.list_price %></p>
      <p class="timestamp">
        Posted <%= time_ago_in_words(home.created_at) %> ago.
      </p>
      <p><%= home.city %></p>
      <p><%= home.zip_code %></p>
      <p><%= home.list_date %></p>
  	<br>
  	</div>
  </div>



</div>