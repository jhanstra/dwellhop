<h1 class="centered top-header"><%= yield(:header) %></h1>

  <div class="row">
    <div class="large-6 large-offset-3 centered">
      <%= form_for(@home) do |f| %>

        <%= f.label :address %>
        <%= f.text_field :address %>

        <%= f.label :city %>
        <%= f.text_field :city %>

        <%= f.label :zip_code %>
        <%= f.text_field :zip_code %>

        <%= f.label :list_price %>
        <%= f.text_field :list_price %>

        <%= f.label :description%>
        <%= f.text_area :description %>

        <%= f.submit yield(:buttontext), class: "button small success radius" %>
      <% end %>
    </div>
  </div>
