<h1 class="centered top-header"><%= yield(:header) %></h1>

<div class="row">
  <div class="large-6 large-offset-3 centered">
    <%= form_for @user do |f| %>
      <%= render 'shared/error_messages' %>


      <%= f.label :name %>
      <%= f.text_field :name %>

      <%= f.label :email %>
      <%= f.text_field :email %>

      <%= f.label :password %>
      <%= f.password_field :password %>

      <%= f.label :password_confirmation, "Confirm Password" %>
      <%= f.password_field :password_confirmation %>

      <%= f.label 'Upload a profile photo' %>
      <%= f.file_field :avatar %>

      <%= f.submit yield(:buttontext), class: "button small my-button radius" %>
    <% end %>
  </div>
</div>