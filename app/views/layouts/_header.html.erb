<div class="contain-to-grid sticky nav" data-options="sticky_on: large">
<nav class="top-bar" data-topbar>
  <ul class="title-area">
    <li class="name">
      <h1><%= link_to "Dwellhop", root_path %></h1>
    </li>
    
  </ul>

  <section class="top-bar-section">
    <!-- Right Nav Section -->
    <ul class="right">
      <% if signed_in? %>
        <li class="active"><%= link_to "Create a Listing", new_home_path %></li>
      <% else %>
        <li class="name"><%= link_to "Sign in", signin_path %></li>
      <% end %>
    </ul>

    <!-- Left Nav Section -->
    <ul class="left">
      <% if signed_in? %>
        <li class="name"><%= link_to current_user.name, current_user %></li>
        <li class="name"><%= link_to "Settings", edit_user_path(current_user)%></li>
        <li class="name"><%= link_to "Sign out", signout_path, method: "delete" %></li>
      <% end %>
    </ul>
  </section>
</nav>
</div>